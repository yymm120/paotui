{
  "name": "paotui-mobile",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Paotui Delivery Mobile App built with Tauri",
  "scripts": {
    "dev": "vite",
    "dev:tauri": "pnpm exec tauri dev",
    "dev:android": "pnpm exec tauri android dev",
    "build": "tsc -b && vite build",
    "build:tauri": "pnpm exec tauri build",
    "build:android": "pnpm exec tauri android build",
    "build:android:debug": "pnpm exec tauri android build --debug",
    "build:android:release": "pnpm exec tauri android build --release",
    "android:init": "pnpm exec tauri android init",
    "tauri": "pnpm exec tauri",
    "install:tauri": "pnpm add -D @tauri-apps/cli@^1.6.0",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/vite": "^4.1.10",
    "@tauri-apps/api": "^2.5.0",
    "@tauri-apps/plugin-fs": "^2.3.0",
    "@tauri-apps/plugin-geolocation": "^2.2.5",
    "@tauri-apps/plugin-notification": "^2.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.522.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@tauri-apps/cli": "^2.5.0",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "tw-animate-css": "^1.3.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}
