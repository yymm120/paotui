{
  "name": "paotui-mobile",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Paotui Delivery Mobile App built with Tauri",
  "workspaces": [
    "plugins/*"
  ],
  "scripts": {
    "dev": "bun run index.html",
    "dev:tauri": "bun x tauri dev",
    "dev:android": "bun x tauri android dev",
    "build": "bun build index.html --outdir ./dist",
    "build:tauri": "bun x tauri build",
    "build:android": "bun x tauri android build",
    "build:android:debug": "bun x tauri android build --debug",
    "build:android:release": "bun x tauri android build --release",
    "android:init": "bun x tauri android init",
    "tauri": "bun x tauri",
    "install:tauri": "bun add -D @tauri-apps/cli@^1.6.0",
    "lint": "bun x biome lint --write",
    "format": "bun x biome format --write",
    "check": "bun x biome check --write",
    "preview": "bun preview"
  },
  "dependencies": {
    "@biomejs/biome": "^2.1.2",
    "@hookform/resolvers": "^5.1.1",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@tanstack/react-query": "^5.83.0",
    "@tauri-apps/api": "^2.5.0",
    "@tauri-apps/plugin-fs": "^2.3.0",
    "@tauri-apps/plugin-geolocation": "^2.2.5",
    "@tauri-apps/plugin-http": "~2.5.0",
    "@tauri-apps/plugin-log": "~2.6.0",
    "@tauri-apps/plugin-notification": "~2",
    "@tauri-apps/plugin-sql": "~2.3.0",
    "@tauri-apps/plugin-store": "~2.3.0",
    "@tauri-apps/plugin-websocket": "~2.4.0",
    "bun-plugin-tailwind": "latest",
    "cesium": "^1.132.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "decimal.js": "^10.6.0",
    "lucide-react": "^0.522.0",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.59.0",
    "react-router-dom": "^7.7.1",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.3.1",
    "tailwind-scrollbar-hide": "^4.0.0",
    "tailwindcss": "^4.1.10",
    "tauri-plugin-txmap-api": "workspace:*",
    "tlbs-map-react": "^1.1.0",
    "url-join": "^5.0.0",
    "url-template": "^3.1.1",
    "vaul": "^1.1.2",
    "zod": "^3.25.73"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.5.0",
    "@types/bun": "latest",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "globals": "^16.0.0",
    "react-devtools": "^6.1.5",
    "tw-animate-css": "^1.3.4",
    "typescript": "~5.8.3"
  },
  "module": "src/index.tsx"
}
